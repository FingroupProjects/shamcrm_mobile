<?xml version="1.0" encoding="utf-8"?>
<!-- Accounting Widget Compact Layout: 1x4 size (single row) - UP TO 4 ITEMS -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Transparent margin wrapper - makes widget appear smaller -->
    <LinearLayout
        android:id="@+id/widget_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:background="@drawable/widget_background"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <!-- Header -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/widget_logo_compact_size"
            android:layout_gravity="start"
            android:scaleType="fitCenter"
            android:src="@drawable/sham_crm_logo" />

        <!-- Empty state (shown when no permissions) -->
        <LinearLayout
            android:id="@+id/empty_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/empty_state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Войдите в приложение"
                android:textColor="#666666"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Buttons (single row, up to 4 items) -->
        <LinearLayout
            android:id="@+id/first_row_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Продажа -->
            <LinearLayout
                android:id="@+id/btn_client_sale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/icon_client_sale"
                    android:layout_width="@dimen/widget_icon_size"
                    android:layout_height="@dimen/widget_icon_size"
                    android:background="@drawable/widget_button_bg"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:tint="@android:color/white"
                    android:contentDescription="Продажа" />

                <TextView
                    android:id="@+id/label_client_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Продажа"
                    android:textSize="@dimen/widget_text_compact_size"
                    android:textColor="#1E2E52"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Возврат от клиента -->
            <LinearLayout
                android:id="@+id/btn_client_return"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/icon_client_return"
                    android:layout_width="@dimen/widget_icon_size"
                    android:layout_height="@dimen/widget_icon_size"
                    android:background="@drawable/widget_button_bg"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:tint="@android:color/white"
                    android:contentDescription="Возврат от клиента" />

                <TextView
                    android:id="@+id/label_client_return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Возврат от клиента"
                    android:textSize="@dimen/widget_text_compact_size"
                    android:textColor="#1E2E52"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Приход товаров -->
            <LinearLayout
                android:id="@+id/btn_income_goods"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/icon_income_goods"
                    android:layout_width="@dimen/widget_icon_size"
                    android:layout_height="@dimen/widget_icon_size"
                    android:background="@drawable/widget_button_bg"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:tint="@android:color/white"
                    android:contentDescription="Приход товаров" />

                <TextView
                    android:id="@+id/label_income_goods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Приход товаров"
                    android:textSize="@dimen/widget_text_compact_size"
                    android:textColor="#1E2E52"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Перемещение -->
            <LinearLayout
                android:id="@+id/btn_transfer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/icon_transfer"
                    android:layout_width="@dimen/widget_icon_size"
                    android:layout_height="@dimen/widget_icon_size"
                    android:background="@drawable/widget_button_bg"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:tint="@android:color/white"
                    android:contentDescription="Перемещение" />

                <TextView
                    android:id="@+id/label_transfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Перемещение"
                    android:textSize="@dimen/widget_text_compact_size"
                    android:textColor="#1E2E52"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

        </LinearLayout>

        <!-- Second row (hidden in compact layout) -->
        <LinearLayout
            android:id="@+id/second_row_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">
        </LinearLayout>

    </LinearLayout>

</FrameLayout>

