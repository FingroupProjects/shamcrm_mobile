<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:elevation="8dp"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Заголовок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/app_name"
            android:background="@drawable/circle_avatar"
            android:padding="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="shamCRM"
            android:textColor="#1E2E52"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- 5 кнопок с подписями -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="5">

        <!-- Дашборд -->
        <LinearLayout
            android:id="@+id/btn_dashboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/icon_dashboard"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Дашборд" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Дашборд"
                android:textSize="10sp"
                android:textColor="#555555"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- Задачи -->
        <LinearLayout
            android:id="@+id/btn_tasks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/icon_tasks"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Задачи" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Задачи"
                android:textSize="10sp"
                android:textColor="#555555" />
        </LinearLayout>

        <!-- Лиды -->
        <LinearLayout
            android:id="@+id/btn_leads"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/icon_leads"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Лиды" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Лиды"
                android:textSize="10sp"
                android:textColor="#555555" />
        </LinearLayout>

        <!-- Сделки -->
        <LinearLayout
            android:id="@+id/btn_deals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/icon_deals"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Сделки" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Сделки"
                android:textSize="10sp"
                android:textColor="#555555" />
        </LinearLayout>

        <!-- Чаты -->
        <LinearLayout
            android:id="@+id/btn_chats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/icon_chats"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Чаты" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Чаты"
                android:textSize="10sp"
                android:textColor="#555555" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>