<?xml version="1.0" encoding="utf-8"?>
<!-- Default Layout: 5x2 size (two rows) - ALL 8 ITEMS -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="start"
    android:background="@drawable/widget_background"
    android:padding="4dp">

    <!-- Заголовок -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/widget_logo_size"
        android:layout_gravity="start"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/sham_crm_logo" />

    <!-- Первый ряд (4 кнопки) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Дашборд -->
        <LinearLayout
            android:id="@+id/btn_dashboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">

            <ImageView
                android:id="@+id/icon_dashboard"
                android:layout_width="@dimen/widget_icon_size"
                android:layout_height="@dimen/widget_icon_size"
                android:background="@drawable/widget_button_bg"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:tint="@android:color/white"
                android:contentDescription="Дашборд" />

            <TextView
                android:id="@+id/label_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Дашборд"
                android:textSize="@dimen/widget_text_size"
                android:textColor="#FFFFFF"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Задачи -->
        <LinearLayout
            android:id="@+id/btn_tasks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">

            <ImageView
                android:id="@+id/icon_tasks"
                android:layout_width="@dimen/widget_icon_size"
                android:layout_height="@dimen/widget_icon_size"
                android:background="@drawable/widget_button_bg"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:tint="@android:color/white"
                android:contentDescription="Задачи" />

            <TextView
                android:id="@+id/label_tasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Задачи"
                android:textSize="@dimen/widget_text_size"
                android:textColor="#FFFFFF"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Лиды -->
        <LinearLayout
            android:id="@+id/btn_leads"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">

            <ImageView
                android:id="@+id/icon_leads"
                android:layout_width="@dimen/widget_icon_size"
                android:layout_height="@dimen/widget_icon_size"
                android:background="@drawable/widget_button_bg"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:tint="@android:color/white"
                android:contentDescription="Лиды" />

            <TextView
                android:id="@+id/label_leads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Лиды"
                android:textSize="@dimen/widget_text_size"
                android:textColor="#FFFFFF"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Сделки -->
        <LinearLayout
            android:id="@+id/btn_deals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">

            <ImageView
                android:id="@+id/icon_deals"
                android:layout_width="@dimen/widget_icon_size"
                android:layout_height="@dimen/widget_icon_size"
                android:background="@drawable/widget_button_bg"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:tint="@android:color/white"
                android:contentDescription="Сделки" />

            <TextView
                android:id="@+id/label_deals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Сделки"
                android:textSize="@dimen/widget_text_size"
                android:textColor="#FFFFFF"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>
    </LinearLayout>

    <!-- Второй ряд (4 кнопки) -->
    <LinearLayout
        android:id="@+id/second_row_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Чаты -->
        <LinearLayout
            android:id="@+id/btn_chats"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">

            <ImageView
                android:id="@+id/icon_chats"
                android:layout_width="@dimen/widget_icon_size"
                android:layout_height="@dimen/widget_icon_size"
                android:background="@drawable/widget_button_bg"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:tint="@android:color/white"
                android:contentDescription="Чаты" />

            <TextView
                android:id="@+id/label_chats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Чаты"
                android:textSize="@dimen/widget_text_size"
                android:textColor="#FFFFFF"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Учёт -->
        <LinearLayout
            android:id="@+id/btn_warehouse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">

            <ImageView
                android:id="@+id/icon_warehouse"
                android:layout_width="@dimen/widget_icon_size"
                android:layout_height="@dimen/widget_icon_size"
                android:background="@drawable/widget_button_bg"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:tint="@android:color/white"
                android:contentDescription="Учёт" />

            <TextView
                android:id="@+id/label_warehouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Учёт"
                android:textSize="@dimen/widget_text_size"
                android:textColor="#FFFFFF"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Заказы -->
        <LinearLayout
            android:id="@+id/btn_orders"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">

            <ImageView
                android:id="@+id/icon_orders"
                android:layout_width="@dimen/widget_icon_size"
                android:layout_height="@dimen/widget_icon_size"
                android:background="@drawable/widget_button_bg"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:tint="@android:color/white"
                android:contentDescription="Заказы" />

            <TextView
                android:id="@+id/label_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Заказы"
                android:textSize="@dimen/widget_text_size"
                android:textColor="#FFFFFF"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Магазин -->
        <LinearLayout
            android:id="@+id/btn_online_store"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">

            <ImageView
                android:id="@+id/icon_online_store"
                android:layout_width="@dimen/widget_icon_size"
                android:layout_height="@dimen/widget_icon_size"
                android:background="@drawable/widget_button_bg"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:tint="@android:color/white"
                android:contentDescription="Магазин" />

            <TextView
                android:id="@+id/label_online_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Магазин"
                android:textSize="@dimen/widget_text_size"
                android:textColor="#FFFFFF"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>