<?xml version="1.0" encoding="utf-8"?>
<!-- Default Layout: 5x2 size (two rows) - ALL 8 ITEMS -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="2dp">

    <!-- Заголовок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="2dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="shamCRM"
            android:textColor="#1E2E52"
            android:textSize="20sp"
            android:textStyle="normal" />
    </LinearLayout>

    <!-- Первый ряд (4 кнопки) -->
    <LinearLayout
        android:id="@+id/first_row_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Дашборд -->
        <LinearLayout
            android:id="@+id/btn_dashboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="1dp">

            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/widget_button_bg"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/icon_dashboard"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@android:color/white"
                    android:layout_gravity="center"
                    android:contentDescription="Дашборд" />
            </FrameLayout>

            <TextView
                android:id="@+id/label_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Дашборд"
                android:textSize="9sp"
                android:textColor="#1E2E52"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Задачи -->
        <LinearLayout
            android:id="@+id/btn_tasks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="1dp">

            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/widget_button_bg"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/icon_tasks"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@android:color/white"
                    android:layout_gravity="center"
                    android:contentDescription="Задачи" />
            </FrameLayout>

            <TextView
                android:id="@+id/label_tasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Задачи"
                android:textSize="9sp"
                android:textColor="#1E2E52"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Лиды -->
        <LinearLayout
            android:id="@+id/btn_leads"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="1dp">

            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/widget_button_bg"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/icon_leads"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@android:color/white"
                    android:layout_gravity="center"
                    android:contentDescription="Лиды" />
            </FrameLayout>

            <TextView
                android:id="@+id/label_leads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Лиды"
                android:textSize="9sp"
                android:textColor="#1E2E52"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Сделки -->
        <LinearLayout
            android:id="@+id/btn_deals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="1dp">

            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/widget_button_bg"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/icon_deals"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@android:color/white"
                    android:layout_gravity="center"
                    android:contentDescription="Сделки" />
            </FrameLayout>

            <TextView
                android:id="@+id/label_deals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Сделки"
                android:textSize="9sp"
                android:textColor="#1E2E52"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>
    </LinearLayout>

    <!-- Второй ряд (4 кнопки) -->
    <LinearLayout
        android:id="@+id/second_row_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="start|center_vertical">

        <!-- Чаты -->
        <LinearLayout
            android:id="@+id/btn_chats"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="1dp">

            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/widget_button_bg"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/icon_chats"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@android:color/white"
                    android:layout_gravity="center"
                    android:contentDescription="Чаты" />
            </FrameLayout>

            <TextView
                android:id="@+id/label_chats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Чаты"
                android:textSize="9sp"
                android:textColor="#1E2E52"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Учёт -->
        <LinearLayout
            android:id="@+id/btn_warehouse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="1dp">

            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/widget_button_bg"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/icon_warehouse"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@android:color/white"
                    android:layout_gravity="center"
                    android:contentDescription="Учёт" />
            </FrameLayout>

            <TextView
                android:id="@+id/label_warehouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Учёт"
                android:textSize="9sp"
                android:textColor="#1E2E52"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Заказы -->
        <LinearLayout
            android:id="@+id/btn_orders"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="1dp">

            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/widget_button_bg"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/icon_orders"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@android:color/white"
                    android:layout_gravity="center"
                    android:contentDescription="Заказы" />
            </FrameLayout>

            <TextView
                android:id="@+id/label_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Заказы"
                android:textSize="9sp"
                android:textColor="#1E2E52"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Магазин -->
        <LinearLayout
            android:id="@+id/btn_online_store"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="1dp">

            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/widget_button_bg"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/icon_online_store"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@android:color/white"
                    android:layout_gravity="center"
                    android:contentDescription="Магазин" />
            </FrameLayout>

            <TextView
                android:id="@+id/label_online_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Магазин"
                android:textSize="9sp"
                android:textColor="#1E2E52"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>