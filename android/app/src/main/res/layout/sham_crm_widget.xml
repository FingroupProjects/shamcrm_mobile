<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- Заголовок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="shamCRM"
            android:textColor="#1E2E52"
            android:textSize="20sp"
            android:textStyle="normal" />
    </LinearLayout>

    <!-- Кнопки с подписями (до 8 кнопок) - поддержка двух рядов -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Первый ряд (первые 4 кнопки) -->
        <LinearLayout
            android:id="@+id/first_row_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="6dp">

            <!-- Дашборд -->
            <LinearLayout
                android:id="@+id/btn_dashboard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="4dp"
                android:padding="8dp">

                <FrameLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/widget_button_bg"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/icon_dashboard"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@android:color/white"
                        android:layout_gravity="center"
                        android:contentDescription="Дашборд" />
                </FrameLayout>

                <TextView
                    android:id="@+id/label_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Дашборд"
                    android:textSize="10sp"
                    android:textColor="#1E2E52" />
            </LinearLayout>

            <!-- Задачи -->
            <LinearLayout
                android:id="@+id/btn_tasks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="4dp"
                android:padding="8dp">

                <FrameLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/widget_button_bg"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/icon_tasks"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@android:color/white"
                        android:layout_gravity="center"
                        android:contentDescription="Задачи" />
                </FrameLayout>

                <TextView
                    android:id="@+id/label_tasks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Задачи"
                    android:textSize="10sp"
                    android:textColor="#1E2E52" />
            </LinearLayout>

            <!-- Лиды -->
            <LinearLayout
                android:id="@+id/btn_leads"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="4dp"
                android:padding="8dp">

                <FrameLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/widget_button_bg"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/icon_leads"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@android:color/white"
                        android:layout_gravity="center"
                        android:contentDescription="Лиды" />
                </FrameLayout>

                <TextView
                    android:id="@+id/label_leads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Лиды"
                    android:textSize="10sp"
                    android:textColor="#1E2E52" />
            </LinearLayout>

            <!-- Сделки -->
            <LinearLayout
                android:id="@+id/btn_deals"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="4dp"
                android:padding="8dp">

                <FrameLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/widget_button_bg"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/icon_deals"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@android:color/white"
                        android:layout_gravity="center"
                        android:contentDescription="Сделки" />
                </FrameLayout>

                <TextView
                    android:id="@+id/label_deals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Сделки"
                    android:textSize="10sp"
                    android:textColor="#1E2E52" />
            </LinearLayout>
        </LinearLayout>

        <!-- Второй ряд (остальные кнопки) -->
        <LinearLayout
            android:id="@+id/second_row_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Чаты -->
            <LinearLayout
                android:id="@+id/btn_chats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="4dp"
                android:padding="8dp">

                <FrameLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/widget_button_bg"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/icon_chats"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@android:color/white"
                        android:layout_gravity="center"
                        android:contentDescription="Чаты" />
                </FrameLayout>

                <TextView
                    android:id="@+id/label_chats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Чаты"
                    android:textSize="10sp"
                    android:textColor="#1E2E52" />
            </LinearLayout>

            <!-- Учёт (Warehouse) -->
            <LinearLayout
                android:id="@+id/btn_warehouse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="4dp"
                android:padding="8dp">

                <FrameLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/widget_button_bg"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/icon_warehouse"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@android:color/white"
                        android:layout_gravity="center"
                        android:contentDescription="Учёт" />
                </FrameLayout>

                <TextView
                    android:id="@+id/label_warehouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Учёт"
                    android:textSize="10sp"
                    android:textColor="#1E2E52" />
            </LinearLayout>

            <!-- Заказы (Orders) -->
            <LinearLayout
                android:id="@+id/btn_orders"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="4dp"
                android:padding="8dp">

                <FrameLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/widget_button_bg"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/icon_orders"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@android:color/white"
                        android:layout_gravity="center"
                        android:contentDescription="Заказы" />
                </FrameLayout>

                <TextView
                    android:id="@+id/label_orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Заказы"
                    android:textSize="10sp"
                    android:textColor="#1E2E52" />
            </LinearLayout>

            <!-- Магазин (Online Store) -->
            <LinearLayout
                android:id="@+id/btn_online_store"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="4dp"
                android:padding="8dp">

                <FrameLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/widget_button_bg"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/icon_online_store"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@android:color/white"
                        android:layout_gravity="center"
                        android:contentDescription="Магазин" />
                </FrameLayout>

                <TextView
                    android:id="@+id/label_online_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Магазин"
                    android:textSize="10sp"
                    android:textColor="#1E2E52" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>